<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="details_template" name="Form">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <!-- HEading -->
                    <div style="text-align:center;">
                        <h1>Survey Form</h1>
                    </div>
                    <!-- Form -->
                    <div>
                        <form>
                            <div class="row">
                                <div class="col-6">
                                    <h4>
                                        <p>General Information</p>
                                    </h4>
                                    <section>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="title">Title</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <select name="title" id="title" class="form-control"
                                                                    aria-label=".form-select-sm example"
                                                                    required="required">
                                                                <option value="" class="form-control"></option>
                                                                <option value="mr">Mr.</option>
                                                                <option value="mrs">Mrs.</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="text">First Name</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="text" name="fname" t-att-value="fname"
                                                                   id="fname"
                                                                   class="form-control" required="required"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="text">Last Name</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="text" name="lname" t-att-value="lname"
                                                                   id="lname"
                                                                   class="form-control" required="required"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="text">Surname</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="text" name="surname" t-att-value="surname"
                                                                   id="surname"
                                                                   class="form-control" required="required"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="birth">Date Of Birth</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="date" name="birth" t-att-value="birth"
                                                                   id="birth"
                                                                   class="form-control" required="required"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="nationality">Nationality</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <select name="nationality" id="nationality"
                                                                    class="form-control"
                                                                    aria-label=".form-select-sm example"
                                                                    required="required">
                                                                <option value=""></option>
                                                                <option value="AX">Ã…land Islands</option>
                                                                <option value="AL">Albania</option>
                                                                <option value="AD">Andorra</option>
                                                                <option value="AT">Austria</option>
                                                                <option value="BY">Belarus</option>
                                                                <option value="BE">Belgium</option>
                                                                <option value="BA">Bosnia Herzegovina</option>
                                                                <option value="BG">Bulgaria</option>
                                                                <option value="HR">Croatia</option>
                                                                <option value="CZ">Czechia</option>
                                                                <option value="DK">Denmark</option>
                                                                <option value="EE">Estonia</option>
                                                                <option value="FO">Faroe Islands</option>
                                                                <option value="FI">Finland</option>
                                                                <option value="FR">France</option>
                                                                <option value="DE">Germany</option>
                                                                <option value="GR">Greece</option>
                                                                <option value="GG">Guernsey</option>
                                                                <option value="HU">Hungary</option>
                                                                <option value="IS">Iceland</option>
                                                                <option value="IE">Ireland</option>
                                                                <option value="IM">Isle of Man</option>
                                                                <option value="IT">Italy</option>
                                                                <option value="JE">Jersey</option>
                                                                <option value="XK">Kosovo</option>
                                                                <option value="LV">Latvia</option>
                                                                <option value="LI">Liechtenstein</option>
                                                                <option value="LT">Lithuania</option>
                                                                <option value="LU">Luxembourg</option>
                                                                <option value="MK">North Macedonia</option>
                                                                <option value="MT">Malta</option>
                                                                <option value="MD">Moldova</option>
                                                                <option value="MC">Monaco</option>
                                                                <option value="ME">Montenegro</option>
                                                                <option value="NL">Netherlands</option>
                                                                <option value="NO">Norway</option>
                                                                <option value="PL">Poland</option>
                                                                <option value="PT">Portugal</option>
                                                                <option value="RO">Romania</option>
                                                                <option value="SM">San Marino</option>
                                                                <option value="RS">Serbia</option>
                                                                <option value="CS">Serbia</option>
                                                                <option value="SK">Slovakia</option>
                                                                <option value="SI">Slovenia</option>
                                                                <option value="ES">Spain</option>
                                                                <option value="SJ">Svalbard Jan Mayen</option>
                                                                <option value="SE">Sweden</option>
                                                                <option value="CH">Switzerland</option>
                                                                <option value="UA">Ukraine</option>
                                                                <option value="GB">United Kingdom</option>
                                                                <option value="VA">Vatican City</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="gender">Gender</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="radio" id="contactChoice1" name="contact"
                                                                   value="male"/>
                                                            <label for="contactChoice1">Male</label>
                                                            <input type="radio" id="contactChoice2" name="contact"
                                                                   value="female"/>
                                                            <label for="contactChoice2">Female</label>
                                                            <input type="radio" id="contactChoice2" name="contact"
                                                                   value="other"/>
                                                            <label for="contactChoice2">Other</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:15px;">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="no">Mobile No.</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input inputmode="numeric" name="no" t-att-value="no"
                                                                   id="no"
                                                                   oninput="this.value = this.value.replace(/\D+/g, '')"
                                                                   class="form-control"
                                                                   required="required" maxlength="10"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </section>
                                </div>
                                <div class="col-6">
                                    <h4>
                                        <p>Other Information</p>
                                    </h4>
                                    <section>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <label for="identity">Identity</label>
                                                        </div>
                                                        <div class="col-9">
                                                            <input type="radio" name="identity" id="aadhar"/>
                                                            <label for="aadhar">Aadhar Card</label>
                                                            <div class="input-container" id="aadharInput">
                                                                <label for="aadharNumber">Aadhar Card Number:
                                                                </label>
                                                                <input type="text" id="aadharNumber"
                                                                       class="form-control"
                                                                       name="aadharNumber"/>
                                                            </div>
                                                            <input type="radio" name="identity" id="aadhar"/>
                                                            <label for="aadhar">Pan Card</label>
                                                            <div class="input-container" id="aadharInput">
                                                                <label for="panNumber">PAN Card Number:</label>
                                                                <input type="text" id="panNumber"
                                                                       class="form-control"
                                                                       name="panNumber"/>
                                                            </div>
                                                            <input type="radio" name="identity" id="aadhar"/>
                                                            <label for="aadhar">VoterID Card</label>
                                                            <div class="input-container" id="voterid">
                                                                <label for="voterNumber">Voter ID Number:</label>
                                                                <input type="text" id="voterNumber"
                                                                       class="form-control"
                                                                       name="voterNumber"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <br/>
                                                <div class="col-12" style="margin-top:25px;">
                                                    <div class="row">
                                                        <div class="col-7">
                                                            <label for="text">Do you have any questions ?</label>
                                                        </div>
                                                        <div class="col-5">
                                                            <input type="radio" name="question" id="yes"/>
                                                            <label for="aadhar">Yes</label>
                                                            <div class="question" id="yesInput">
                                                                <label for="questionText">Specify your question:
                                                                </label>
                                                                <input type="text" id="questionText"
                                                                       name="questionText"
                                                                       class="form-control"/>
                                                            </div>
                                                            <input type="radio" name="question" id="no"/>
                                                            <label for="aadhar">No</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:25px;">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="text">When would you like to connect ?
                                                            </label>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-check form-check-inline"
                                                                 style="margin-left: 10px;">
                                                                <input class="form-check-input" type="checkbox"
                                                                       id="inlineCheckbox1"
                                                                       value="option1"/>
                                                                <label class="form-check-label"
                                                                       for="inlineCheckbox1">
                                                                    09:00
                                                                </label>
                                                            </div>
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="checkbox"
                                                                       id="inlineCheckbox2"
                                                                       value="option2"/>
                                                                <label class="form-check-label"
                                                                       for="inlineCheckbox2">
                                                                    11:00
                                                                </label>
                                                            </div>
                                                            <div class="form-check form-check-inline"
                                                                 style="margin-left:10px;">
                                                                <input class="form-check-input" type="checkbox"
                                                                       id="inlineCheckbox1"
                                                                       value="option3"/>
                                                                <label class="form-check-label"
                                                                       for="inlineCheckbox1">
                                                                    03:00
                                                                </label>
                                                            </div>
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="checkbox"
                                                                       id="inlineCheckbox2"
                                                                       value="option4"/>
                                                                <label class="form-check-label"
                                                                       for="inlineCheckbox2">
                                                                    06:00
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:25px;">
                                                    <div class="row">
                                                        <div class="col-5">
                                                            <label for="text">Expected salary range</label>
                                                        </div>
                                                        <div class="col-7">
                                                            <input type="range" class="form-range"
                                                                   id="customRange1"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12" style="margin-top:25px;">
                                                    <div class="row">
                                                        <div class="col-5">
                                                            <label for="favcolor">Select your favorite color :
                                                            </label>
                                                        </div>
                                                        <div class="col-7">
                                                            <input type="color" id="favcolor" name="favcolor"
                                                                   value="#ff0000"/>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-12" style="margin-top:25px;">
                                                    <div class="row">
                                                        <div class="col-7">
                                                            <label for="share">Other thing you would like to share :
                                                            </label>
                                                        </div>
                                                        <div>
                                                            <input type="text" name="thing" t-att-value="share"
                                                                   id="share"
                                                                   class="form-control" required="required"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>

                            </div>
                            <br/>
                            <div>
                                <center>
                                    <input type="reset" value="Reset"/>
                                    <a href="/success">
                                        <input type="submit" value="Submit"/>
                                    </a>
                                </center>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <br/>
            <style>
                .input-container {
                display: none;
                margin-top: 10px;
                }

                input[type="radio"]:checked + label + .input-container {
                display: block;
                }
                .question {
                display: none;
                margin-top: 10px;
                }
                input[type="radio"]:checked + label + .question {
                display: block;
                }
            </style>
        </t>
    </template>
    <template id="thank_you" name="Thanks Message">
        <span style="font-size:30px; color: Brown;">
            <center>
                <p>Lead successfully created!</p>
            </center>
        </span>
    </template>
    <record id="website_menu_create" model="website.menu">
        <field name="name">Survey Form</field>
        <field name="url">/survey_form</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">80</field>
    </record>
</odoo>