<odoo>
    '''res.config.settings add selection field.'''
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='emails']" position="inside">
                <setting id="invoice_create" string="Invoice Creation Option">
                    <field name="invoice_creation_option" field_id="invoice_creation_option_01"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>














































































































































































































